{% trans_default_domain 'FOSUserBundle' %}

<h1>Profile</h1>
<div class="row">
    <div class="col-sm-2 col-xs-12">
        <img src="{{ gravatar(app.user.email, 200) }}" alt="Profile image" class="img-circle img-fluid ">
    </div>
    <div class="col-sm-10 col-xs-12">
        <h4>
            {{ app.user.username }}
            <br>
            <small class="text-muted">{{ app.user.email }}</small>
        </h4>
        <a href="https://facebook.com/" class="btn btn-facebook">
            <i class="fa fa-fw fa-facebook"></i>
        </a>
        <a href="https://www.twitch.tv/" class="btn btn-google">
            <i class="fa fa-fw fa-google"></i>
        </a>
        <a href="https://twitter.com/" class="btn btn-twitter">
            <i class="fa fa-fw fa-twitter"></i>
        </a>
        <a href="https://github.com/disjfa/glynn-admin" class="btn btn-github">
            <i class="fa fa-fw fa-github"></i>
        </a>
        <hr>
        <div class="btn-group">
            <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-primary">
                Edit profile
            </a>
            <a href="{{ path('fos_user_change_password') }}" class="btn btn-primary">
                Change password
            </a>
        </div>
    </div>
</div>
<hr>
